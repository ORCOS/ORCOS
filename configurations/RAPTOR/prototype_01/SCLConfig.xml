<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns:xs="http://www.w3.org/2001/XMLSchema-instance" xs:schemaLocation="http://orcos.cs.uni-paderborn.de/SCL http://orcos.cs.uni-paderborn.de/SCL/scl2.xsd">
  <Options>
    <Logging>
      <Log Prefix="KERNEL" Level="INFO" />
      <Log Prefix="MEM" Level="WARN" />
      <Log Prefix="PROCESS" Level="WARN" />
      <Log Prefix="SCHEDULER" Level="WARN" />
      <Log Prefix="SYNCHRO" Level="WARN" />
      <Log Prefix="SYSCALLS" Level="WARN" />
      <Log Prefix="DB" Level="WARN" />
      <Log Prefix="HAL" Level="WARN" />
      <Log Prefix="ARCH" Level="INFO" />
      <Log Prefix="FILESYSTEM" Level="WARN" />
      <Log Prefix="COMM" Level="WARN" />
    </Logging>
  </Options>
  <!-- ************************************
    					Tasks
         ************************************ -->
  <Tasks>
    <Task>
      <Start>0x81100000</Start>
      <End>0x8117FFFF</End>
      <Heap>0x81177000</Heap>
      <Path>./tasks/telnet_server/</Path>
      <PriorityOptions>
        <InitialPriority>0</InitialPriority>
        <Phase>0</Phase>
        <RealTimeOptions>
          <Period>500000</Period>
          <Deadline>500000</Deadline>
          <ExecutionTime>0</ExecutionTime>
        </RealTimeOptions>
      </PriorityOptions>
      <Vma>0x100000</Vma>
    </Task>
  </Tasks>
  <SCL>
    <!-- ************************************
    			Skeleton Board
         ************************************ -->
    <Skeleton>
      <Name>Board</Name>
      <Superclass>arch/PPC40x/RAPTOR/RaptorBoard</Superclass>
      <Member Name="HatLayer" Class="arch/PPC40x/PPC405HatLayer" None="false" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="Clock" Class="arch/PPC40x/PPC405Clock" None="false" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="Processor" Class="arch/PPC40x/PPC405FXProcessor" None="false" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="UART2" Class="arch/none/DummyCharDriver" None="true" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="InterruptHandler" Class="arch/PPC40x/PPC405InterruptHandler" None="false" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="InterruptController" Class="arch/PPC40x/RAPTOR/OPB_Interrupt_Controller" None="false" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="ETH" Class="arch/PPC40x/RAPTOR/PLB_EMAC0" None="false" UserSpace="false" PhyLoadAddress="0x0">
        <PropertyValue Name="Address" Value="0x90000000" Type="unsigned int" />
        <PropertyValue Name="Length" Value="4096" Type="unsigned int" />
        <PropertyValue Name="Name" Value="eth0" Type="char*" />
      </Member>
      <Member Name="UART" Class="arch/PPC40x/RAPTOR/OPB_UART_Lite" None="false" UserSpace="false" PhyLoadAddress="0x0">
        <PropertyValue Name="Address" Value="0x90210000" Type="unsigned int" />
        <PropertyValue Name="Length" Value="16" Type="unsigned int" />
        <PropertyValue Name="Name" Value="serial0" Type="char*" />
      </Member>
      <Member Name="LED" Class="arch/PPC40x/RAPTOR/LED" None="false" UserSpace="false" PhyLoadAddress="0x0">
        <PropertyValue Name="Address" Value="0x90220000" Type="unsigned int" />
        <PropertyValue Name="Length" Value="16" Type="unsigned int" />
        <PropertyValue Name="Name" Value="led0" Type="char*" />
      </Member>
      <Member Name="Timer" Class="arch/PPC40x/PPC405ProgrammableIntervalTimer" None="false" UserSpace="false" PhyLoadAddress="0x0" />
    </Skeleton>
    <!-- ************************************
    			Skeleton Kernel
         ************************************ -->
    <Skeleton>
      <Name>Kernel</Name>
      <Superclass>kernel/Kernel</Superclass>
      <Member Name="MigrationManager" Class="migration/MigrationManager" None="true" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="ServiceDiscovery" Class="comm/servicediscovery/SNServiceDiscovery" None="true" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="MemoryManager" Class="mem/SequentialFitMemManager" None="false" UserSpace="false" PhyLoadAddress="0x0">
        <PropertyValue Name="LastFit" Value="0" Type="unsigned int" />
      </Member>
      <Member Name="Thread" Class="process/RealTimeThread" None="false" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="Dispatcher" Class="scheduler/SingleCPUDispatcher" None="false" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="Scheduler" Class="scheduler/EarliestDeadlineFirstThreadScheduler" None="false" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="Logger" Class="debug/Logger" None="false" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="PowerManager" Class="hal/PowerManager" None="false" UserSpace="false" PhyLoadAddress="0x0" />
      <Member Name="TaskManager" Class="process/TaskManager" None="false" UserSpace="false" PhyLoadAddress="0x0" />
    </Skeleton>
    <!-- ************************************
    			Skeleton SyscallManager
         ************************************ -->
    <Skeleton>
      <Name>SyscallManager</Name>
      <Superclass>syscalls/SyscallManager</Superclass>
      <Member Name="sleep" None="false" />
      <Member Name="thread_create" None="false" />
      <Member Name="thread_run" None="false" />
      <Member Name="thread_self" None="false" />
      <Member Name="thread_yield" None="false" />
      <Member Name="signal_wait" None="false" />
      <Member Name="signal_signal" None="false" />
      <Member Name="fputc" None="false" />
      <Member Name="fgetc" None="false" />
      <Member Name="fcreate" None="false" />
      <Member Name="fopen" None="false" />
      <Member Name="fclose" None="false" />
      <Member Name="fwrite" None="false" />
      <Member Name="fread" None="false" />
      <Member Name="new" None="false" />
      <Member Name="delete" None="false" />
      <Member Name="socket" None="false" />
      <Member Name="connect" None="false" />
      <Member Name="listen" None="false" />
      <Member Name="bind" None="false" />
      <Member Name="sendto" None="false" />
      <Member Name="recv" None="false" />
      <Member Name="add_devaddr" None="false" />
      <Member Name="task_stop" None="false" />
      <Member Name="task_resume" None="false" />
      <Member Name="ioctl" Class="" None="false" UserSpace="false" PhyLoadAddress="0x0" />
    </Skeleton>
    <!--  DEFINES -->
    <Define>
      <Name>ENABLE_NESTED_INTERRUPTS</Name>
      <Value>0</Value>
    </Define>
    <!-- PROCFS -->
    <Define>
      <Name>HAS_PROCFS_ENABLED</Name>
      <Value>1</Value>
    </Define>
    <!--  Worker Task configuration -->
    <Define>
      <Name>USE_WORKERTASK</Name>
      <Value>1</Value>
    </Define>
    <Define>
      <Name>NUM_WORKERTHREADS</Name>
      <Value>2</Value>
    </Define>
    <!-- logical Memory addresses -->
    <Define>
      <Name>LOG_TASK_SPACE_START</Name>
      <Value>0x100000</Value>
    </Define>
    <Define>
      <Name>NUM_ADDRESS_PROTOCOLS</Name>
      <Value>0</Value>
    </Define>
    <Define>
      <Name>NUM_TRANSPORT_PROTOCOLS</Name>
      <Value>0</Value>
    </Define>
    <Define>
      <Name>USE_SIMPLEADDRESSPROTOCOL</Name>
      <Value>0</Value>
    </Define>
    <Define>
      <Name>USE_ARP</Name>
      <Value>0</Value>
    </Define>
    <Define>
      <Name>USE_SIMPLETRANSPORTPROTOCOL</Name>
      <Value>0</Value>
    </Define>
    <Define>
      <Name>MMIO_START_ADDRESS</Name>
      <Value>0x48000000</Value>
    </Define>
    <Define>
      <Name>MMIO_AREA_LENGTH</Name>
      <Value>0xFFFFFF</Value>
    </Define>
    <Define>
      <Name>ICACHE_ENABLE</Name>
      <Value>1</Value>
    </Define>
    <Define>
      <Name>DCACHE_ENABLE</Name>
      <Value>1</Value>
    </Define>
    <Define>
      <Name>DEFAULT_USER_STACK_SIZE</Name>
      <Value>4096</Value>
    </Define>
    <Define>
      <Name>STACK_GROWS_DOWNWARDS</Name>
      <Value>1</Value>
    </Define>
    <Define>
      <Name>RESERVED_BYTES_FOR_STACKFRAME</Name>
      <Value>12</Value>
    </Define>
    <Define>
      <Name>CLEAR_THREAD_STACKS</Name>
      <Value>1</Value>
    </Define>
    <Define>
      <Name>WORKERTHREAD_STACK_SIZE</Name>
      <Value>4096</Value>
    </Define>
    <Define>
      <Name>WORKERTHREAD_UART_PRIORITY_PARAM</Name>
      <Value>5000</Value>
    </Define>
    <Define>
      <Name>WORKERTHREAD_ETH_PRIORITY_PARAM</Name>
      <Value>2000</Value>
    </Define>
    <Define>
      <Name>USE_SAFE_KERNEL_STACKS</Name>
      <Value>0</Value>
    </Define>
    <Define>
      <Name>KERNEL_STACK_SIZE</Name>
      <Value>4096</Value>
    </Define>
    <Define>
      <Name>ALIGN_VAL</Name>
      <Value>4</Value>
    </Define>
    <Define>
      <Name>__EARLY_SERIAL_SUPPORT__</Name>
      <Value>1</Value>
    </Define>
    <Define>
      <Name>__DEBUG__</Name>
      <Value>0</Value>
    </Define>
    <Define>
      <Name>RAM_SIZE</Name>
      <Value>512 MB</Value>
    </Define>
  </SCL>
</Configuration>

