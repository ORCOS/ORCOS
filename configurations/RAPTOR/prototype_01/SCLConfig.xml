  <!-- ************************************
    					Tasks
         ************************************ -->
  <Tasks>
    <Task>
      <Start>0x400000</Start>
      <End>0x40FFFF</End>
      <Heap>0x408000</Heap>
      <Path>./tasks/task1/</Path>
      <PriorityOptions>
        <InitialPriority>0</InitialPriority>
        <Phase>2000000</Phase>
        <RealTimeOptions>
          <Period>500000</Period>
          <Deadline>1000000</Deadline>
          <ExecutionTime>0</ExecutionTime>
        </RealTimeOptions>
      </PriorityOptions>
      <Vma>0x200000</Vma>
    </Task>
    <Task>
      <Start>0x500000</Start>
      <End>0x51FFFF</End>
      <Heap>0x508000</Heap>
      <Path>./tasks/task2/</Path>
      <PriorityOptions>
        <InitialPriority>0</InitialPriority>
        <Phase>2000000</Phase>
        <RealTimeOptions>
          <Period>500000</Period>
          <Deadline>1000000</Deadline>
          <ExecutionTime>0</ExecutionTime>
        </RealTimeOptions>
      </PriorityOptions>
      <Vma>0x200000</Vma>
    </Task>
    <Task>
      <Start>0x600000</Start>
      <End>0x60FFFF</End>
      <Heap>0x608000</Heap>
      <Path>./tasks/debugtask/</Path>
      <PriorityOptions>
        <InitialPriority>0</InitialPriority>
        <Phase>2000000</Phase>
        <RealTimeOptions>
          <Period>500000</Period>
          <Deadline>1000000</Deadline>
          <ExecutionTime>0</ExecutionTime>
        </RealTimeOptions>
      </PriorityOptions>
      <Vma>0x200000</Vma>
    </Task>
  </Tasks>
  <SCL>
