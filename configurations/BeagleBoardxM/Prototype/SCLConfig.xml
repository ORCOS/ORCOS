  <!-- ************************************
    					Tasks
         ************************************ -->
  <Tasks>
    <Task>
      <Start>0x81100000</Start>
      <End>0x8117FFFF</End>
      <Heap>0x81177000</Heap>
      <Path>./tasks/shell_task/</Path>
      <PriorityOptions>
        <InitialPriority>0</InitialPriority>
        <Phase>0</Phase>
        <RealTimeOptions>
          <Period>500000</Period>
          <Deadline>500000</Deadline>
          <ExecutionTime>0</ExecutionTime>
        </RealTimeOptions>
      </PriorityOptions>
      <Vma>0x100000</Vma>
    </Task>
  </Tasks>
