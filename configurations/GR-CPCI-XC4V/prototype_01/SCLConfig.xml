<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns:xs="http://www.w3.org/2001/XMLSchema-instance" xs:schemaLocation="http://orcos.cs.uni-paderborn.de/SCL http://orcos.cs.uni-paderborn.de/SCL/scl2.xsd">
  <Options>
    <Logging>
      <Log Prefix="KERNEL" Level="INFO" />
      <Log Prefix="MEM" Level="FATAL" />
      <Log Prefix="PROCESS" Level="INFO" />
      <Log Prefix="SCHEDULER" Level="INFO" />
      <Log Prefix="SYNCHRO" Level="FATAL" />
      <Log Prefix="SYSCALLS" Level="INFO" />
      <Log Prefix="DB" Level="FATAL" />
      <Log Prefix="HAL" Level="FATAL" />
      <Log Prefix="ARCH" Level="FATAL" />
      <Log Prefix="FILESYSTEM" Level="FATAL" />
      <Log Prefix="COMM" Level="FATAL" />
    </Logging>
  </Options>
  <!-- ************************************
    					Tasks
         ************************************ -->
  <Tasks>
    <Task>
      <Start>0x40080000</Start>
      <End>0x4008FFFF</End>
      <Heap>0x40088000</Heap>
      <Path>./tasks/task1/</Path>
      <PriorityOptions>
        <InitialPriority>0</InitialPriority>
        <Phase>2000000</Phase>
        <RealTimeOptions>
          <Period>500000</Period>
          <Deadline>1000000</Deadline>
          <ExecutionTime>0</ExecutionTime>
        </RealTimeOptions>
      </PriorityOptions>
    </Task>
    <Task>
      <Start>0x400C0000</Start>
      <End>0x400CFFFF</End>
      <Heap>0x400C8000</Heap>
      <Path>./tasks/task2/</Path>
      <PriorityOptions>
        <InitialPriority>0</InitialPriority>
        <Phase>2000000</Phase>
        <RealTimeOptions>
          <Period>500000</Period>
          <Deadline>1000000</Deadline>
          <ExecutionTime>0</ExecutionTime>
        </RealTimeOptions>
      </PriorityOptions>
    </Task>
    <Task>
      <Start>0x40100000</Start>
      <End>0x4010FFFF</End>
      <Heap>0x40108000</Heap>
      <Path>./tasks/debugtask/</Path>
      <PriorityOptions>
        <InitialPriority>0</InitialPriority>
        <Phase>2000000</Phase>
        <RealTimeOptions>
          <Period>500000</Period>
          <Deadline>1000000</Deadline>
          <ExecutionTime>0</ExecutionTime>
        </RealTimeOptions>
      </PriorityOptions>
    </Task>
  </Tasks>
  <SCL>
    <!-- ************************************
    			Skeleton Mutex
         ************************************ -->
    <Skeleton>
      <Name>Mutex</Name>
      <Member>
        <Name>Scheduler</Name>
        <Class>scheduler/RoundRobinThreadScheduler</Class>
        <None>true</None>
      </Member>
    </Skeleton>
    <!-- ************************************
    			Skeleton Semaphore
         ************************************ -->
    <Skeleton>
      <Name>Semaphore</Name>
      <Member>
        <Name>Scheduler</Name>
        <Class>scheduler/RoundRobinThreadScheduler</Class>
        <None>true</None>
      </Member>
    </Skeleton>
    <!-- ************************************
    			Skeleton SingleCPUDispatcher
         ************************************ -->
    <Skeleton>
      <Name>SingleCPUDispatcher</Name>
      <Member>
        <Name>Scheduler</Name>
        <Class>scheduler/RoundRobinThreadScheduler</Class>
      </Member>
    </Skeleton>
    <!-- ************************************
    			Skeleton Thread
         ************************************ -->
    <Skeleton>
      <Name>Thread</Name>
      <Superclass>process/Thread</Superclass>
    </Skeleton>
    <!-- ************************************
    			Skeleton MemoryManager
         ************************************ -->
    <Skeleton>
      <Name>MemoryManager</Name>
      <Superclass>mem/LinearMemManager</Superclass>
      <Member>
        <Name>Seg</Name>
        <Class>mem/MemResource</Class>
      </Member>
      <Member>
        <Name>HatLayer</Name>
        <Class>arch/Leon3/Leon3HatLayer</Class>
        <None>true</None>
      </Member>
      <Member>
        <Name>FirstFit</Name>
        <Class />
        <None>true</None>
      </Member>
      <Member>
        <Name>NextFit</Name>
        <Class />
        <None>true</None>
      </Member>
      <Member>
        <Name>BestFit</Name>
        <Class />
        <None>true</None>
      </Member>
      <Member>
        <Name>WorstFit</Name>
        <Class />
        <None>true</None>
      </Member>
    </Skeleton>
    <!-- ************************************
    			Skeleton Board
         ************************************ -->
    <Skeleton>
      <Name>Board</Name>
      <Superclass>arch/Leon3/GR-CPCI-XC4V/Virtex4Board</Superclass>
      <Member>
        <Name>Processor</Name>
        <Class>arch/Leon3/Leon3Processor</Class>
      </Member>
      <Member>
        <Name>Timer</Name>
        <Class>arch/Leon3/Leon3IntervalTimer</Class>
      </Member>
      <Member>
        <Name>Clock</Name>
        <Class>arch/Leon3/Leon3Clock</Class>
        <Device>"clock"</Device>
      </Member>
      <Member>
        <Name>Watchdog</Name>
        <Class>arch/PPC40x/PPC405Watchdog</Class>
        <Device>"watchdog"</Device>
        <None>true</None>
      </Member>
      <Member>
        <Name>UART</Name>
        <Class>arch/Leon3/GR-CPCI-XC4V/LEON_UART</Class>
        <Device>"serial0"</Device>
        <Address>0x80000100</Address>
        <None>false</None>
      </Member>
      <Member>
        <Name>LED</Name>
        <Class>arch/Leon3/GR-CPCI-XC4V/LED</Class>
        <Device>"led0"</Device>
        <Address>0x80000900</Address>
        <None>false</None>
      </Member>
      <Member>
        <Name>InterruptHandler</Name>
        <Class>arch/Leon3/GR-CPCI-XC4V/Leon3InterruptHandler</Class>
      </Member>
      <Member>
        <Name>InterruptController</Name>
        <Class>arch/Leon3/GR-CPCI-XC4V/Leon3_IRQMP</Class>
      </Member>
      <Member>
        <Name>ETH</Name>
        <Class>arch/Leon3/GR-CPCI-XC4V/Leon3_GRETH</Class>
        <Device>"eth0"</Device>
        <Address>0x80000e00</Address>
        <UniqueID>0x0,0x1,0x2,0x3,0x4</UniqueID>
        <None>true</None>
      </Member>
      <Member>
        <Name>SHM</Name>
        <Class>arch/Leon3/ShmDriver/ShmDriver</Class>
        <Device>"shm0"</Device>
        <Address>0x49500000</Address>
        <None>true</None>
      </Member>
    </Skeleton>
    <!-- ************************************
    			Skeleton Kernel
         ************************************ -->
    <Skeleton>
      <Name>Kernel</Name>
      <Superclass>kernel/Kernel</Superclass>
      <Member>
        <Name>Logger</Name>
